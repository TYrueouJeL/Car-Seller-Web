<div class="card">
    <img src="https://picsum.photos/400/200?random={{ vehicle.model.id }}" alt="{{ vehicle.model.name }}" class="card-image">

    <h2 class="card-title">{{ vehicle.model.brand.name }} - {{ vehicle.model.name }}</h2>

    <div class="flex items-center gap-4">
        <p class="card-text"><strong>Categorie</strong> : {{ vehicle.category.name }}</p>
        {% if type == 'sale' %}
            <p class="card-text"><strong>Prix :</strong> {{ vehicle.price }}€</p>
        {% elseif type == 'rental' %}
            <p class="card-text"><strong>Prix journalier :</strong> {{ vehicle.dailyPrice }}€/jour</p>
        {% endif %}
    </div>

    {% if detail_path != null %}
        <a href="{{ detail_path }}" class="card-button">Voir plus</a>
    {% endif %}
</div>
