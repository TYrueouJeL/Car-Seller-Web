{% extends 'base.html.twig' %}

{% block title %}Location{% endblock %}

{% block body %}
    <div class="container mx-auto px-8 py-8">
        <h1 class="title text-center">{{ vehicle.model.name }}</h1>

        <div class="mt-6 grid grid-cols-1 md:grid-cols-3 gap-6">
            {{ component('vehicle_detail', {
                'vehicle': vehicle,
                'type': 'rental',
                'features': features,
                'customer': app.user,
            }) }}

            <aside class="md:col-span-1 card">
                <div class="text-center mb-3">
                    <div class="title">{{ vehicle.dailyPrice ~ ' €/jour' }}</div>
                </div>

                {% for message in app.flashes('success') %}
                    <div class="mb-4 p-3 bg-green-100 text-green-800 rounded">
                        {{ message }}
                    </div>
                {% endfor %}

                {% for message in app.flashes('error') %}
                    <div class="mb-4 p-3 bg-red-100 text-red-800 rounded">
                        {{ message }}
                    </div>
                {% endfor %}

                <div class="flex gap-2">
                    {% if app.user %}
                        <form method="post">
                            <label for="rental_period" class="block mb-2 font-semibold">Sélectionner la période :</label>
                            <input type="text" id="rental_period" name="rental_period" placeholder="Sélectionner la période" class="w-full p-2 border rounded mb-4" required>
                            <div id="total_price" class="text-xl font-semibold text-center my-4"></div>
                            <button type="submit" class="form-submit w-full py-2 bg-blue-600 text-white rounded hover:bg-blue-500">Louer</button>
                        </form>
                    {% else %}
                        <a href="{{ path('app_login') }}" class="flex-1 bg-gray-600 text-white text-center py-2 rounded hover:bg-gray-500">Connectez-vous pour continuer</a>
                    {% endif %}
                </div>
            </aside>
        </div>
    </div>

    {# Flatpickr CSS et JS via CDN #}
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/flatpickr/dist/flatpickr.min.css">
    <script src="https://cdn.jsdelivr.net/npm/flatpickr"></script>

    <script>
        document.addEventListener('DOMContentLoaded', function () {
            const unavailableDates = {{ unavailableDates|json_encode|raw }}; // récupère directement depuis le contrôleur

            flatpickr("#rental_period", {
                mode: "range",
                dateFormat: "Y-m-d",
                disable: unavailableDates,
                minDate: "today"
            });
        });

        document.addEventListener('DOMContentLoaded', function () {
            const unavailableDates = {{ unavailableDates|json_encode|raw }};
            const dailyPrice = {{ vehicle.dailyPrice }};
            const totalPriceDiv = document.getElementById('total_price');

            flatpickr("#rental_period", {
                mode: "range",
                dateFormat: "Y-m-d",
                disable: unavailableDates,
                minDate: "today",
                onClose: function(selectedDates) {
                    if (selectedDates.length === 2) {
                        const start = selectedDates[0];
                        const end = selectedDates[1];

                        // calcul du nombre de jours
                        const diffTime = end - start;
                        const diffDays = Math.ceil(diffTime / (1000 * 60 * 60 * 24)) + 1;

                        // prix total
                        const total = diffDays * dailyPrice;

                        totalPriceDiv.innerHTML =
                            `Total : <span class="text-blue-600">${total} €</span> (${diffDays} jours)`;
                    }
                }
            });
        });

    </script>
{% endblock %}
